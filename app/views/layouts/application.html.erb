<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Hplace - Meet Share and Care</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= favicon_link_tag 'apple-icon-120x120.png'%>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable"  content="yes">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <%= render 'shared/ios_pwa_links.html.erb' %>
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
  </head>
  <body>
    <% if user_signed_in? %>
      <div class="topbar">
        <%= render "shared/topbar" %>
      </div>
    <% end %>
    <div class="body-to-grey">
      <div class='sticky-navbar'>
        <%= yield %>
      </div>
      <%#= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
      <%= render 'shared/notification_alert' %>
      <% if user_signed_in? %>
        <div id="show-notif" data-user="<%= current_user.id %>" >
      <% end %>
    </div>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
