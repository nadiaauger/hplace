<div class="notification-dropwdown nav-item dropdown">
  <i class="fas fa-bell" class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" /></i>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    <% notifications = current_user.unseen_notifications + current_user.seen_notifications  %>
    <% if current_user.unseen_notifications.length > 0 %>
      <% current_user.unseen_notifications.first(2).each do |notification| %>
        <div class="notification" style= "">
          <%= render 'shared/notification', notification: notification %>
        </div>
      <% end %>
    <% end %>
    <% current_user.seen_notifications.first(2).each do |notification| %>
      <div class="notification seen">
        <%= render 'shared/notification', notification: notification %>
      </div>
    <% end %>
    <div class="dropdown-divider"></div>
    <%= link_to "See more", notification_path, class: "dropdown-item text-center" %>
  </div>
</div>
