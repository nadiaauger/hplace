 <div class="card-event m-3">
        <%= cl_image_tag event.photo.key, height: 400, width: 400, crop: :fill, class: "event-img" %>
    <div class="card-event-infos">
      <div>
        <h2><%= "#{event.name} " %></h2>
        <p>   <%= event.location %></p>
        <p> <%= "Start: #{event.start}." %></p>
        <p class="mt-0"><%= "End: #{event.end}" %></p>
      </div>
      <div>
        <%= cl_image_tag event.user.photo.key, height: 45, width: 45, class: "card-event-owner avatar-bordered" %>
        <p><%= event.user.username %></p>
      </div>
    </div>
  <%= link_to "", event_path(event), class: "card-link" %>
</div>
