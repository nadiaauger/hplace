<div class="chat-card">
      <%= cl_image_tag event.photo.key, height: 80, width: 80, crop: :fill, class: 'avatar', style: "object-size: cover;" %>
      <div class="ml-3">
        <h2 ><%= event.name %></h2>
        <% if event.chat_room.nil?  %>
          <p> no messages in this chatroom yet</p>
          <% else %>
          <p><%= " #{event.chat_room.messages.last.user.username}: #{event.chat_room.messages.last.content }"%></p>
          <% end %>
      </div>
      <%= link_to "", event_chat_rooms_path(event), class: 'chat-link', method: :post %>
</div>
