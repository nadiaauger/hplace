<% if event.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path event.photo.key%>'); background-position: inherit;">
    <div class="container">
       <h1> <%= event.name %> </h1>
       <p><%= event.description %></p>
       <button class="btn btn-primary"> Register </button>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png'); background-position: inherit;">
    <div class="container">
      <h1> <%= event.name %> </h1>
      <p><%= event.description %></p>
      <button class="btn btn-primary"> Register </button>
    </div>
  </div>
<% end %>
