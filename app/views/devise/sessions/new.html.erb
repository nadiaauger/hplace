<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs-signin">
            <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
            <%= f.input :password, required: false, placeholder: "••••••" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
          <div class="my-10" style = "font-size: 15px; margin: 10px">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
